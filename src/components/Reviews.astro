---
import ReviewCard from "./ReviewCard.astro";
---

<style>
  @keyframes scroll-left {
    from {
      transform: translateX(0%);
    }
    to {
      transform: translateX(-50%);
    }
  }

  @keyframes scroll-right {
    from {
      transform: translateX(-50%);
    }
    to {
      transform: translateX(0%);
    }
  }

  .scroll-wrapper {
    display: flex;
    gap: 20px;
    width: max-content;
    animation: scroll-left 50s linear infinite;
  }

  .scroll-wrapper.reverse {
    animation: scroll-right 50s linear infinite;
  }
</style>

<section class="flex flex-col items-center">
  <div class="w-full overflow-hidden relative space-y-5">
    <div style="background-image: linear-gradient(90deg, rgba(255,255,255,1) 0%, rgba(255,255,255,0) 20%, rgba(255,255,255,0) 80%, rgba(255,255,255,1) 100%);" class="absolute top-0 left-0 w-full h-full z-10" />
    <!-- Left-scrolling row -->
    <div class="scroll-wrapper">
        <div class="flex gap-5">
            {Array.from({ length: 10 }).map(() => <ReviewCard />)}
        </div>
        <div class="flex gap-5">
            {Array.from({ length: 10 }).map(() => <ReviewCard />)}
        </div>
    </div>

    <!-- Right-scrolling row -->
    <div class="scroll-wrapper reverse">
        <div class="flex gap-5">
            {Array.from({ length: 10 }).map(() => <ReviewCard />)}
        </div>
        <div class="flex gap-5">
            {Array.from({ length: 10 }).map(() => <ReviewCard />)}
        </div>
    </div>
  </div>
</section>
