---
interface NavProps {
  dark?: string;
}

const { dark: isDark } = Astro.props;
---

<div
  class="top-0 left-0 z-10 right-0 flex items-center justify-between px-0 py-4"
>
  <!-- logo -->
  <a href="/" class="flex">
    <span
      class=`text-lg ${isDark ? 'text-slate-800' : 'text-gray-100'} font-semibold`
      >Plose</span
    >
    <span class="text-lg text-primary font-black">FLY</span>
  </a>

  <!-- nav links -->
  <div class="hidden md:flex gap-10">
    <a
      href="#flights"
      class=`${isDark ? 'text-slate-800' : 'text-gray-100'} text-sm font-light hover:underline`
      >Flights</a
    >
    <a
      href="#faq"
      class=`${isDark ? 'text-slate-800' : 'text-gray-100'} text-sm font-light hover:underline`
      >FAQ</a
    >
    <a
      href="#reviews"
      class=`${isDark ? 'text-slate-800' : 'text-gray-100'} text-sm font-light hover:underline`
      >Reviews</a
    >
  </div>

  <!-- social links -->
  <div class="hidden md:flex gap-8">
    <a href="#" aria-label="tiktok" target="_blank" rel="noopener">
      <img
        class=`${isDark && 'invert-75'}`
        src="/icon/tiktok.svg"
        alt="tiktok"
      />
    </a>
    <a href="#" aria-label="instagram" target="_blank" rel="noopener">
      <img
        class=`${isDark && 'invert-75'}`
        src="/icon/instagram.svg"
        alt="tiktok"
      />
    </a>
    <a href="#" aria-label="facebook" target="_blank" rel="noopener">
      <img
        class=`${isDark && 'invert-75'}`
        src="/icon/facebook.svg"
        alt="tiktok"
      />
    </a>
  </div>
</div>
