---
const { imgSrc, title, description } = Astro.props;
---

<div
  class="flex items-center h-80 w-full p-3 pr-5 shadow-md gap-5 rounded-xl bg-white"
>
  <img class="h-full w-auto aspect-square rounded-xl" src={imgSrc} />
  <div>
    <h3 class="text-xl font-semibold">{title}</h3>
    <p>{description}</p>
  </div>
</div>
